{
  "homepage": "https://landsman.github.io/boom-widget-calendar",
  "name": "boom-widget-calendar",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/landsman/boom-widget-calendar.git"
  },
  "author": "Michal Landsman",
  "scripts": {
    "extract": "lingui extract",
    "compile": "lingui compile",
    "start": "craco start",
    "build": "craco build",
    "eslint": "eslint ./src/**/*",
    "test": "craco test --transformIgnorePatterns \"node_modules/(?!axios)/\"",
    "eject": "craco eject",
    "prepare": "husky install",
    "predeploy": "npm run compile && npm run build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "@lingui/detect-locale": "^3.17.2",
    "@lingui/react": "^3.17.2",
    "@mantine/core": "^5.10.5",
    "axios": "^1.3.5",
    "date-fns": "^2.29.3",
    "react": "^18.2.0",
    "react-day-picker": "^8.7.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "styled-components": "^5.3.9"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@craco/craco": "^7.1.0",
    "@lingui/cli": "^3.17.2",
    "@lingui/macro": "^3.17.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.23",
    "@types/react": "^18.0.34",
    "@types/react-dom": "^18.0.11",
    "@types/styled-components": "^5.1.26",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^@local(.*)$": "<rootDir>/src$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
